.second-hand{
  position: relative;
  top: 85rpx;
  width:100%;
}

.second-hand-photo{
  position: relative;
  top: 20rpx;
  width: 700rpx;
  height: 450rpx;
  margin-left: 25rpx;
  border: 1rpx solid rgba(250,125,105,0.5);
  border-radius: 10rpx;
}
.second-hand-photo::before{
  content: "宝贝照片";
  background: #fff;
  top: -20rpx;
  color: rgba(250,125,105,0.5);
  text-align: center;
  position: absolute;
  left:20rpx;
  font-size: 40rpx;
}
.second-hand-photo image{
  width: 200rpx;
  margin:40rpx 250rpx;
  height: 200rpx;
}
.second-hand-photo-text{
  color: rgba(250,125,105,0.5);
  font-size: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 50rpx;

}
.second-hand textarea{
  width: 700rpx;
  margin:50rpx 25rpx 10rpx 25rpx;
  border: 1rpx solid rgba(250,125,105,0.5);
  border-radius: 10rpx;
  color: rgba(250,125,105,0.5);
  font-size: 40rpx;
  text-align: center;
  padding-top: 30rpx;
}
.second-hand textarea::before{
  content: "宝贝描述";
  background: #fff;
  top: -20rpx;
  color: rgba(250,125,105,0.5);
  text-align: center;
  position: absolute;
  left:20rpx;
  font-size: 40rpx;
}
.second-hand button{
  width:700rpx;
  margin-top:15rpx;
}
.second-hand-info-textarea-placeholder{
  color: rgba(250,125,105,0.5);
}