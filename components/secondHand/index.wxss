.second-hand{
  position: relative;
  top: 80rpx;
  width:100%;
}

.second-hand-photo{
  position: relative;
  top: 20rpx;
  width: 700rpx;
  height: 500rpx;
  margin-left: 25rpx;
  border: 1rpx solid rgba(250,125,105,0.5);
  border-radius: 10rpx;
}
.second-hand-photo image{
  width: 200rpx;
  margin:40rpx 250rpx;
  height: 200rpx;
}
.second-hand-photo-text{
  color: rgba(250,125,105,0.5);
  font-size: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-top: 50rpx;

}
.second-hand textarea{
  width: 700rpx;
  margin:35rpx 25rpx 10rpx 25rpx;
  border: 1rpx solid rgba(250,125,105,0.5);
  border-radius: 10rpx;
  color: rgba(250,125,105,0.5);
  font-size: 40rpx;
  text-align: center;
  min-height: 100rpx;
}
.second-hand button{
  width:700rpx;
}
.second-hand-info-textarea-placeholder{
  color: rgba(250,125,105,0.5);
  text-align: center;
  height:200rpx;
  line-height: 200rpx;
}