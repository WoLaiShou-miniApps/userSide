.grade-panel{
  margin:50rpx 0rpx 0rpx 40rpx;
}
.grade-panel .up-panel{
  display: flex;
  flex-direction: row;
}
.grade-panel .up-panel image{
  width:100rpx;
  height:90rpx;
}
.grade-panel .up-panel .righttext{
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
}
.grade-panel .up-panel .righttext .delivertime{
  margin-top:10rpx;
  display: flex;
  flex-direction: row;
}

.grade-panel .up-panel .righttext .delivertime .tip{
  margin:3rpx 5rpx 0rpx 20rpx ;
  font-size:30rpx;
  line-height:25rpx;
  color:#C4C4C4;
  width:25rpx;
  height:25rpx;
  border-radius: 50%;
  border:1rpx solid #ABABAB;
  text-align:center;
}
.grade-panel .bottom-panel{
  margin-top:45rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  vertical-align: center;
}
.grade-panel .bottom-panel image{
  margin-left:20rpx;
  width:80rpx;
  height:80rpx;
}

.evaluate-panel{
  margin:150rpx 5% 0rpx 5%;
  width:90%;
}
.evaluate-panel .praise-panel{

  width:100%;
  height:80rpx;
  display: flex;
  flex-direction: row;
}

.evaluate-panel .praise-panel .praise-zone{
  position:absolute;
  right:50rpx;
  display: flex;
  flex-direction: row;
}
.evaluate-panel .praise-panel .praise-zone .praise-button{
  margin-top:8rpx;
  margin-left:20rpx;
  width:100rpx;
  height:60rpx;
  border:1rpx solid #cccccc;
  border-radius:3rpx;
}
.evaluate-panel .praise-panel .praise-zone .praise-button image{
  margin:5rpx 0rpx 0rpx 25rpx;
  width:50rpx;
  height:50rpx;
}
.evaluate-panel .input-panel{
  margin-top:50rpx;
  font-size:35rpx;
  width:100%;
}
.evaluate-panel .input-panel textarea{
  width:92%;
  border: 1rpx solid #000;
  padding:20rpx;
}
.submit-panel{
  position:fixed;
  bottom:0rpx;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  color:#FFF;
  background:#C51A29;
  border-radius: 0;
}
.down{
  transform: rotate(180deg)
}