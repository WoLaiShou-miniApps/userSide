<template name="myorders">
  <view class="uplist-panel">
    <view bindtap="changepape" data-index="0" class="item {{order_state==0 ? 'active':''}}">
      未完成
    </view>
    <view bindtap="changepape" data-index="1" class="item {{order_state==1 ? 'active':''}}">
      已完成
    </view>
  </view>

  <block wx:if="{{order_state==0 && myorder_list.untaken.num!=0}}">
    <view class="myorder_list">
      <block wx:for="{{myorder_list.untaken.content}}">
        <view bindtap="selectorder" data-index="{{index}}" class="orders-item">
          <view class="name">{{item.name}}</view>
          <view class="righttext">
            <view class="address">{{item.address}}</view>
            <view class="time">{{item.time}}</view>
          </view>
          <image src="../../static/image/more_{{select_order==index?'up':'down'}}.png" class="more-down"></image>
        </view>

        <block wx:if="{{select_order==index}}">
          <view class="operate-panel">
            <navigator hover-class="none" url="../order_detail/order_detail?index={{item.id}}">
              <view class="item">查看详情</view>
            </navigator>
            <view class="item" bindtap="orderDelete">申请退单</view>
          </view>
        </block>

      </block>
    </view>
  </block>
  <block wx:elif="{{order_state==1 && myorder_list.finished.num!=0}}">
    <view class="myorder_list">
      <block wx:for="{{myorder_list.finished.content}}">
        <view bindtap="selectorder" data-index="{{index}}" class="orders-item">
          <view class="name">{{item.name}}</view>
          <view class="righttext">
            <view class="address">{{item.address}}</view>
            <view class="time">{{item.time}}</view>
          </view>
          <image src="../../static/image/more_{{select_order==index?'up':'down'}}.png" class="more-down"></image>
        </view>

        <block wx:if="{{select_order==index}}">
          <view class="operate-panel">
            <navigator hover-class="none" url="../order_detail/order_detail?index={{item.id}}">
              <view class="item">查看详情</view>
            </navigator>
            <navigator hover-class="none" url="../evaluate/evaluate?index={{item.id}}">
              <view class="item" bindtap="delete">评价此单</view>
            </navigator>
          </view>
        </block>
      </block>
    </view>
  </block>
  <block wx:else>
    <view class="empty-list">暂时还没有订单~</view>
  </block>
</template>




<template name="orderdetail">
  <view class="detail-chief">
    <view class="title">
      单号：175120{{order_list[orderid].id}}
    </view>
    <view class="term">
      <view class="term-item">
        <image src="../../static/image/name.png" class="image"></image>
        <text>{{order_list[orderid].name}}</text>
      </view>
      <view class="term-item">
        <image src="../../static/image/time.png" class="image"></image>
        <text>{{order_list[orderid].time}}</text>
      </view>
      <view class="term-item">
        <image src="../../static/image/phone.png" class="image"></image>
        <text>{{order_list[orderid].phone}}</text>
      </view>
      <navigator url="../index/index">
        <view class="term-item" style="border-bottom:#FFF">
          <image src="../../static/image/address.png" class="image"></image>
          <text>{{order_list[orderid].address}}</text>
          <image src="../../static/image/more.png" class="more-right"></image>
        </view>
      </navigator>
    </view>
  </view>
  <map class="order-map" longitude="{{Mapmarkers[1].longitude}}" latitude="{{Mapmarkers[1].latitude}}" scale="13" markers="{{Mapmarkers}}">
    
  </map>
  <view class="detail-remark">
    <view class="title">备注：</view>
    <text>无</text>
  </view>

  <view class="detail-image">
    <view class="title">照片：</view>
    <image src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1494500571320&di=94cee9054af601f56022cd315a0415f7&imgtype=0&src=http%3A%2F%2Fs15.sinaimg.cn%2Fmiddle%2F44d869bbg79642aa2119e%26690">
    </image>
  </view>
</template>