page{
    width: 100%;
    height: 100%;
    background: rgb(245,245,245);
}
.user{
    
    width: 100%;
    height: 100%;
}

.user-info{
    width: 100%;
    height:200rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    position:relative;
}
.user-info image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin: 25rpx;
}

.user-info .credit
{
    position:absolute;
    right:100rpx;
    top:60rpx;
    display:flex;
    flex-direction:row;
    height:30rpx;
}
.user-info .credit image{
    margin: 0rpx;
    width:30rpx;
    height:30rpx;
    transform:scaleX(-1) rotate(-15deg);
  margin-top:-1px;

}
.user-info .credit text{
    margin-left:10rpx;
    font-size:30rpx;
    height:30rpx;
    line-height:30rpx;
    color:#F57E59;
}
.user-info-detail{
    flex-grow: 4;
}
.user-name{
    margin-top: 50rpx;
    color:rgb(95,95,95);
}
.user-more{
    margin-top: 20rpx;
    font-size:35rpx;
    color: #F57E59;
}
.user-item{
    margin-top: 50rpx;
    width: 100%;
    display: flex;
    flex-direction:column;
}
.item{
    background: #fff;
    height: 100rpx;
    margin-top: 20rpx;
    line-height: 100rpx;
    color: rgb(95,95,95);
    display: flex;
    justify-content: space-between;
}
.item image{
    width: 70rpx;
    height: 70rpx;
    position: relative;
    margin: 15rpx;
    margin-left: 60rpx;
}
.item-title{
    flex-grow: 4;
    margin-left: 60rpx;
}


/*info页面*/
.info-panel{
    margin:100rpx 20rpx;
    width: 710rpx;
    display:flex;
    flex-direction:column;
    justify-content: space-around;
    position:relative;
}
.info-panel .info-item{
    width: 100%;
    height:100rpx;

    display:flex;
    flex-direction:row;
    justify-content: center;
    align-items:center;
}
.info-panel .info-item text{
    width: 180rpx;
    height:80rpx;
    line-height:80rpx;
    font-size:35rpx;
    text-align:justify;
}
.info-panel .info-item input{
    left:200rpx;
    font-size:30rpx; 
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(35, 34, 33, 0.2) inset;
    border: 1rpx solid #000;
    width: 400rpx;
    height:80rpx;
    text-align: center;
}
.submit-buttun{
    margin-top:40rpx;
    width:600rpx;
    height:80rpx;
    align-items:center;
    border-radius: 10rpx;
    background:rgb(199,22,34);
    color:#fff;
    line-height:80rpx;
}
.no-use{
    color: #aaaaaa;
    background: #cccccc
}
.contact-area{
  width:200rpx;
  margin:20rpx auto;
  margin-top:100rpx;
  margin-bottom:50rpx;

}
.contact-btn{
  background: transparent;
  font-size: 30rpx;
}

.support{
  display:flex;
  flex-direction:row;
  position:fixed;
  bottom:10rpx;
  font-size:25rpx;
  color:#1DB0B8;
  right:10rpx;
  height:50rpx;
  line-height:50rpx;
  font-weight:bold;
}

.support image{
  margin-top:10rpx;
  width:45rpx;
  height:32rpx;
  margin-left:10rpx;
}

.dim-panel{
  background:rgba(0,0,0,0.8);
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;

}

.dim-subpanel{
  border-radius:10rpx;
  margin-left:15%;
  margin-top:150rpx;
  width:70%;
  height:720rpx;
  background:white;
  align-items:center;
  text-align:center;
  position:relative;
}

.dim-subpanel .QRcode{
  margin-top:20rpx;
  width:70%;
}

.dim-subpanel .contact-panel{
  position:absolute;
  top:380rpx;
  width:100%;
}

.dim-subpanel .contact-item{
  line-height:80rpx;
  height:80rpx;
  display:flex;
  flex-direction:row;
}

.dim-subpanel .contact-item .icon{
  display: inline-block;
  vertical-align: middle;
  margin:15rpx 0rpx 15rpx 70rpx;
  width:50rpx;
  height:50rpx;
}

.dim-subpanel .contact-item .text{
  width:350rpx;
  text-align:center;
  display: inline-block;
  height:80rpx;
  font-size:30rpx;
  color:#999999;
}

.thetip{
  width:100%;
  bottom:10rpx;
  line-height:50rpx;
  height:50rpx;
  color:#F01B2D;
  font-size:22rpx;
  text-align:center;
  position:absolute;
}

.hotline-panel{
  border-radius:15rpx;
  margin-left:15%;
  margin-top:250rpx;
  width:70%;
  height:350rpx;
  background:white;
  align-items:center;
  text-align:center;
}

.hotline-panel .contact-tip{
  margin-left:10%;
  padding-top:40rpx;
  height:100rpx;
  line-height:55rpx;
  width:80%;
  text-align:center;
  font-size:35rpx;
  margin-bottom:25rpx;
}

.hotline-panel .contact-item{
  line-height:80rpx;
  height:80rpx;
  display:flex;
  flex-direction:row;
}

.hotline-panel .contact-item .icon{
  display: inline-block;
  vertical-align: middle;
  margin:15rpx 0rpx 15rpx 80rpx;
  width:50rpx;
  height:50rpx;
}

.hotline-panel .contact-item .text{
  width:320rpx;
  text-align:center;
  display: inline-block;
  height:80rpx;
  font-size:30rpx;
  color:#999999;
}

