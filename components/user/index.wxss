page{
    width: 100%;
    height: 100%;
}
.user{
    background: rgb(245,245,245);
    width: 100%;
    height: 100%;
}
.user-info{
    width: 100%;
    height:200rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}
.user-info image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin: 25rpx;
}
.user-info-detail{
    flex-grow: 4;
}
.user-name{
    margin-top: 50rpx;
    color:rgb(95,95,95);
}
.user-more{
    margin-top: 20rpx;
    font-size:35rpx;
    color: rgb(200,200,195)
}
.user-item{
    margin-top: 50rpx;
    width: 100%;
    display: flex;
    flex-direction:column;
}
.item{
    background: #fff;
    height: 100rpx;
    margin-top: 20rpx;
    line-height: 100rpx;
    color: rgb(95,95,95);
    display: flex;
    justify-content: space-between;
}
.item image{
    width: 70rpx;
    height: 70rpx;
    position: relative;
    margin: 15rpx;
}
.item-title{
    flex-grow: 4;
    margin-left: 40rpx;
}


/*info页面*/
.info-panel{
    margin:100rpx 20rpx;
    width: 710rpx;
    display:flex;
    flex-direction:column;
    justify-content: space-around;
    position:relative;
}
.info-panel .info-item{
    width: 100%;
    height:100rpx;

    display:flex;
    flex-direction:row;
    justify-content: center;
    line-height:100rpx;
}
.info-panel .info-item text{
    width: 180rpx;
    font-size:35rpx;
    text-align:justify；
}
.info-panel .info-item input{
    left:200rpx;
    margin-top:25rpx;
    font-size:30rpx; 
    border-bottom:1rpx solid #cccccc;
    width: 400rpx;
    text-align: center;
}
.submit-buttun{
    margin-top:40rpx;
    width:600rpx;
    height:80rpx;
    align-items:center;
    border-radius: 10rpx;
    background:#1bb28d;
    color:#fff;
    line-height:80rpx;
}
.no-use{
    color: #aaaaaa;
    background: #cccccc
}