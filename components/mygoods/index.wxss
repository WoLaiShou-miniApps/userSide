.tip{
  position:absolute;
  top:0rpx;

  background:#FFF68F;
  height:50rpx;
  width:100%;

  display:flex;
  flex-direction: row;
  line-height:50rpx;
}
.tip image{
  margin-top:5rpx;
  margin-left:30rpx;
  width:40rpx;
  height:40rpx;
}
.tip text{
  margin-left:20rpx;
  font-size:30rpx;
  color:#EB3F2F;
}

.mygoods-panel{
  padding:70rpx 20rpx 20rpx 20rpx;
  min-height:200rpx;
  background:#FFF;
 
}
.mygoods-panel .title-panel{
   display:flex;
   flex-direction: row;

   height:80rpx;
   width:100%;
   background:#E8E8E8;

}
.mygoods-panel .title-panel .title{
  line-height:80rpx;
  margin-left:0rpx;
  font-size:40rpx;
  font-weight:600;
  color:#fff;
}
.mygoods-panel .title-panel .num{
  width:40rpx;
  height:40rpx;
  background:#cc00ff;
  border-radius:50%;
  margin-top:22rpx;
  line-height:40rpx;
  text-align:center;
  font-weight:400;
  color:#FFF;
  position:absolute;
  right:50rpx;
}
.mygoods-panel .shelve-panel{
  padding-top:30rpx;

  height:400rpx;

  display:flex;
  flex-direction: row;
}
.mygoods-panel .shelve-panel .item{
  margin:0rpx 20rpx 0rpx 20rpx;
  width:400rpx;
}
.mygoods-panel .shelve-panel .item image{
  width:300rpx;
  height:220rpx;
}
.mygoods-panel .shelve-panel .item .textList{
  margin-top:20rpx;
  width:300rpx;
  display:flex;
  flex-direction: column;
  text-align:center;
  line-height:50rpx;
  font-size:30rpx;
}
.mygoods-panel .empty-panel{
  text-align:center;
  height:100rpx;
  width:100%;
  line-height:100rpx;
  font-size:35rpx;
  
}