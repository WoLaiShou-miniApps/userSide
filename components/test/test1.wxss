map{
    width: 100%;
    height:500rpx;
}
.uplist-panel{
    background-color: #fff;
    border-bottom:1rpx solid #C4C4C4;

    display: flex;
    flex-direction: row;
}
.uplist-panel .uplist-item{
    width: 33%;
    height:70rpx;

    line-height:70rpx;
    text-align: center;
    font-size:45rpx;
}


.goods_left{
  position: absolute;
  left: 0;
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.goods_left .goods_left_items{
  height: 70rpx;
  line-height: 70rpx;
  padding: 6px 0;
  border-bottom: 1px dashed #dedede;
  font-size: 14px;
  color:#666666;
}
.goods_left .goods_left_items.active{
  background: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.left_items_polish{
  position:absolute;
  left:0%;
  height:60rpx;
  width:10rpx;
  background:#f8ca4f;
  margin-top:30rpx;
}


.goods_right{
  position: absolute;
  right: 0;
  width: 75%;
  height: 100%;
  padding:0rpx 20rpx 0rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
}
.goods_right .goods_right_items{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid #dadada;
  overflow: hidden; 
}
.goods_right .goods_right_items.active{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 250rpx;
  border-bottom: 1rpx solid #dadada;
  overflow: hidden; 
}

.goods_right .goods_right_items .top_panel{
  display: flex;
  flex-direction: row;
}
.goods_image{
  margin-top:30rpx;
  width: 170rpx;
  height: 150rpx;
}
.righttext{
  position:relative;
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
  margin-top: 35rpx;
  height:150rpx;
}
.righttext .name{
  width:300rpx;
  font-size: 13px;
  word-wrap:break-word; 
  word-break:break-all;
  text-overflow: ellipsis;
}
.righttext .price{
  position:absolute;
  bottom:25rpx;
  width:300rpx;
  font-size: 12px;
  color:red;
}

.addbutton{
  position:absolute;
  right:50rpx;
  margin-top:120rpx;
  width:50rpx;
  height:50rpx;
}
.goods_right .goods_right_items.active .bottom-panel{
  background: #fff;
  width:100%;
  height:50rpx;

  display: flex;
  flex-direction: row;
}
.goods_right .goods_right_items.active .bottom-panel .item{
  border:1rpx dotted #dadada;
  height:40rpx;
  width:120rpx;
  margin-top:10rpx;
  margin-left:30rpx;

  font-size:25rpx;
  text-align:center;
  line-height:40rpx;
}
.goods_right .goods_right_items.active .bottom-panel .item.active{
  border:5rpx dotted #ff7c63;
}





