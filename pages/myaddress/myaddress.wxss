/* pages/myaddress/index.wxss */
.address-list{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.zhanwei{
  height: 300rpx;
  visibility: hidden;
}
.address{
  width: 710rpx;
  height: 200rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background: rgba(220,224,223,0.2);
  border:1rpx solid rgba(0,0,0,0.5);
  box-shadow: 1rpx 1rpx 2rpx 1rpx rgba(120,118,117,0.7);
  position: relative;
}
.address::after{
  content: "";
  position: absolute;
  top: 75rpx;
  right: 50rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: top center;
  background-size: cover;
  width: 50rpx;
  height: 50rpx;
}
.address view{
  margin-top: 10rpx;
  color: rgba(78,77,79,0.8);
  font-family: "微软雅黑"
}
.address-name{
  margin-left: 10rpx;
  width: 160rpx;
  font-size: 40rpx;
  float: left;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.address-phone{
  width: 500rpx;
  margin-left: 10rpx;
  float: left;
  font-size: 40rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.address-address{
  margin-left: 10rpx;
  width: 500rpx;
  float: left;
  font-size: 40rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.address-detail{
  margin-left: 10rpx;
  width: 100%;
  float: left;
  font-size: 40rpx;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.add-btn{
  position: fixed;
  background: rgb(199,22,34);
  color: #fff;
  bottom: 0;
  width: 710rpx;
  margin: 20rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border: 1rpx solid rgba(230,228,232,0.8);
  border-radius: 10rpx
}
.commit-btn{
  background: rgb(199,22,34);
  color: #fff;
  bottom: 0;
  width: 710rpx;
  margin: 20rpx;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border: 1rpx solid rgba(230,228,232,0.8);
  border-radius: 10rpx
}
.add-address{
  width: 100%;
  margin-top: 20rpx;
}
.add-address input,.picker{
  width: 710rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  border: 1rpx solid #000;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.add-address-info{
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: rgba(120,118,122,0.7)
}
.add-address map{
  margin: 0 auto;
}
.icon-area{
  margin: 100rpx auto;
}