.usertip{
  position: absolute;
  width: 50rpx;
  top: 90rpx;
  right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  z-index: 9;
  animation: monkey 0.8s infinite ease-in-out;
}
.usertip text{
  display: inline-block;
  height: 100%;
  line-height: 50rpx;
  color: rgb(180,185,188)
}
@keyframes monkey{
  0%{ top: 90rpx;}
  25%{ top: 97rpx;}
  50%{ top: 105rpx;}
  75%{ top: 97rpx;}
  100%{ top: 90rpx;}
}
.tell-user{
  padding-top: 85rpx;
  width:100%;
  background: rgba(66,66,66,0.6);
  color:#fff;
  text-align: center;
  line-height: 45rpx;
  font-size: 35rpx;
}
.h1{
  display: block;
  margin: 10rpx auto;
  font-size: 45rpx;
  text-align: center;
}
.h2{
  display: block;
  font-size: 40rpx;
  text-align: left;
